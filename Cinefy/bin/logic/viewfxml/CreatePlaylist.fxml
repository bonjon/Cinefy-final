							AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
							<children>
								<Label layoutY="14.0" text="Create Playlist"
									textFill="#f5c518" AnchorPane.leftAnchor="20.0"
									AnchorPane.topAnchor="20.0">
									<font>
										<Font name="Arial Bold" size="17.0" />
									</font>
								</Label>
								<ListView fx:id="filmPlaylist" layoutX="20.0"
									layoutY="316.0" onMouseClicked="#onSelectedFilm"
