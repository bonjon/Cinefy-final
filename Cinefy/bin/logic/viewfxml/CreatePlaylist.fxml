								<Label layoutX="20.0" layoutY="40.0" text="Playlist Name?"
									textFill="#f5c518" AnchorPane.leftAnchor="20.0"
									AnchorPane.topAnchor="80.0">
									<font>
										<Font name="Arial" size="17.0" />
									</font>
								</Label>
								<Label fx:id="tvStatus" layoutX="22.0" layoutY="280.0"
