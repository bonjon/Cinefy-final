<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720.0" prefWidth="1480.0"
	xmlns="http://javafx.com/javafx/8.0.171"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="logic.viewfxml.PlaylistAdvancedBoundary">
	<children>
		<BorderPane AnchorPane.bottomAnchor="0.0"
			AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
			AnchorPane.topAnchor="0.0">
			<left>
				<AnchorPane maxWidth="-Infinity" minWidth="-Infinity"
					prefWidth="220.0" style="-fx-background-color: #121212;"
					BorderPane.alignment="CENTER">
					<children>
						<Label layoutX="50.0" layoutY="14.0" text="Cinefy"
							textFill="#f5c518" AnchorPane.topAnchor="14.0">
							<font>
								<Font name="DejaVu Sans Mono Bold" size="33.0" />
							</font>
						</Label>
						<Label fx:id="home" layoutX="75.0" layoutY="320.0"
							onMouseClicked="#onHomeClicked" text="Home" textFill="#f5c518"
							AnchorPane.bottomAnchor="500.0">
							<font>
								<Font name="Arial" size="25.0" />
							</font>
						</Label>
						<Label fx:id="answer" layoutX="67.0" layoutY="351.0"
							onMouseClicked="#onAnswerClicked" text="Answer"
							textFill="#f5c518" AnchorPane.bottomAnchor="339.0">
							<font>
								<Font name="Arial" size="25.0" />
							</font>
						</Label>
						<Label fx:id="playlists" layoutX="62.0" layoutY="608.0"
							text="Playlists" textFill="#f5c518" underline="true"
							AnchorPane.bottomAnchor="200.0">
							<font>
								<Font name="Arial Bold Italic" size="25.0" />
							</font>
						</Label>
						<Label fx:id="profile" layoutX="73.0" layoutY="676.0"
							onMouseClicked="#onProfileClicked" text="Profile"
							textFill="#f5c518" AnchorPane.bottomAnchor="60.0">
							<font>
								<Font name="Arial" size="25.0" />
							</font>
						</Label>
						<Line endX="100.0" layoutX="110.0" layoutY="71.0"
							startX="-100.0" stroke="#f5c518" />
					</children>
				</AnchorPane>
			</left>
			<center>
				<AnchorPane BorderPane.alignment="CENTER">
					<children>
						<AnchorPane prefWidth="1250.0"
							style="-fx-background-color: #1c1c1c;"
							AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
							AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
							<children>
								<Label layoutY="14.0" text="Top rated playlists"
									textFill="#f5c518" AnchorPane.leftAnchor="20.0"
									AnchorPane.topAnchor="20.0">
									<font>
										<Font name="Arial Bold" size="17.0" />
									</font>
								</Label>
								<ListView fx:id="topPlaylist" layoutX="20.0"
									layoutY="40.0" orientation="HORIZONTAL" prefHeight="200.0"
									prefWidth="1020.0" style="-fx-background-color: #1c1c1c;"
									AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0"
									AnchorPane.topAnchor="60.0" />
								<Label layoutX="20.0" layoutY="260.0"
									text="Your Playlists" textFill="#f5c518"
									AnchorPane.topAnchor="280.0">
									<font>
										<Font name="Arial Bold" size="17.0" />
									</font>
								</Label>
								<ListView fx:id="playlistList" layoutX="20.0"
									layoutY="300.0" onMouseClicked="#onSelectedPlaylist"
									orientation="HORIZONTAL" prefHeight="200.0" prefWidth="1020.0"
									style="-fx-background-color: #1c1c1c;"
									AnchorPane.bottomAnchor="200.0" AnchorPane.leftAnchor="20.0"
									AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="320.0" />
								<Button fx:id="btnCreate" layoutX="1043.0"
									layoutY="520.0" mnemonicParsing="false"
									onAction="#onCreatePlaylist"
									style="-fx-background-color: #121212; -fx-background-radius: 30 30 30 30;"
									text="Create a New Playlist" textFill="#f5c518"
									AnchorPane.rightAnchor="40.0" AnchorPane.topAnchor="560.0">
									<font>
										<Font name="Arial" size="13.0" />
									</font>
								</Button>
								<Label fx:id="labelError1" layoutX="171.0" layoutY="22.0"
									textFill="RED" AnchorPane.leftAnchor="201.0">
									<font>
										<Font name="Arial" size="13.0" />
									</font>
								</Label>
								<Label fx:id="labelError2" layoutX="133.0" layoutY="282.0"
									textFill="RED" AnchorPane.leftAnchor="163.0">
									<font>
										<Font name="Arial" size="13.0" />
									</font>
								</Label>
							</children>
						</AnchorPane>
					</children>
				</AnchorPane>
			</center>
		</BorderPane>
	</children>
</AnchorPane>
